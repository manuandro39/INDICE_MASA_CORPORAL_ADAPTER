<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context="com.example.mespada.idmc_calculo.ResultActivity"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/activity_result"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorAccent" >

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView8"
        android:text=""
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:textSize="24sp" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="28dp"
        android:text="@string/state"
        android:textSize="24dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView9"
        android:text=""
        android:textSize="24sp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5" />

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btn_volver"
        android:text="@string/retornar_pag_principal"
        android:background="@color/colorDark"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="51dp"
        android:text="@string/your_imc"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_volver"
        android:layout_toStartOf="@+id/btn_volver" />

</RelativeLayout>
