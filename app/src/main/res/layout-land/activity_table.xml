<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context="com.example.mespada.idmc_calculo.TableActivity"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/activity_table"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:background="@color/colorAccent" >

    <TextView
        android:text="@string/tabla_valores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTablaValores"
        android:textStyle="normal|bold"
        android:textColor="@color/colorDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tabla_valores"
        android:dividerHeight="3dp"
        android:background="@android:color/white"
        android:divider="@color/colorPrimaryDark"
        android:layout_below="@+id/txtTablaValores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/btnVolverTable" />

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnVolverTable"
        android:text="@string/retornar_pag_principal"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:background="@color/colorDark"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtTablaValores"
        android:layout_alignEnd="@+id/txtTablaValores" />

</RelativeLayout>
